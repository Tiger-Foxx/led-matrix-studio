{
  "$schema": "https://schemas.tauri.app/capability/2",
  "identifier": "default",
  "description": "Default capabilities for the LED Matrix Studio app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-save",
    "dialog:allow-open",
    "dialog:allow-message",
    "dialog:allow-ask",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:write-all",
    "fs:read-all",
    "fs:allow-exists",
    "fs:allow-mkdir"
  ]
}
