{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LED Matrix Studio",
  "version": "1.3.0",
  "identifier": "com.tiger-foxx.ledmatrix",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LED Matrix Studio",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
